<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/nickname_img"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"/>
            <TextView
                android:id="@+id/my_profile_nickname"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center"
                android:text="nickname"
                android:textSize="25sp"
                android:layout_marginTop="5dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:background="@drawable/location_img"/>
            <EditText
                android:id="@+id/my_profile_location"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:gravity="center"
                android:hint="location"
                android:textSize="18sp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="10dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:background="@drawable/language_img"
                android:layout_marginLeft="10dp"/>
            <Spinner
                android:id="@+id/my_profile_language"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_toRightOf="@id/languageimg"
                android:entries="@array/lanaguage"
                android:paddingLeft="12dp"
                android:layout_marginStart="12dp"
                android:layout_marginRight="5dp"/>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp">
            <ImageView
                android:id="@+id/img2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:background="@drawable/introduce_img"/>
            <TextView
                android:id="@+id/first2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/img2"
                android:text="당신을 조금 더 쉽게 알 수 있도록 표현해주세요."
                android:layout_marginLeft="10dp"
                android:textSize="15sp"/>
            <EditText
                android:id="@+id/my_profile_introduce"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:hint="introduce"
                android:textSize="18sp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="10dp"
                android:layout_toRightOf="@id/img2"
                android:layout_below="@id/first2"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp">
            <ImageView
                android:id="@+id/img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/hobby_img"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="3dp"/>
            <TextView
                android:id="@+id/first"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:text="상대방과 이야기를 시작할 때"
                android:layout_toRightOf="@id/img"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="3dp"/>
            <TextView
                android:id="@+id/second"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:text="취미는 가장 쉬운 방법 중 하나입니다."
                android:layout_below="@id/first"
                android:layout_toRightOf="@id/img"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="3dp"/>
            <TextView
                android:id="@+id/third"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:text="다른 사람이 공통점을 찾기 쉽게 "
                android:layout_below="@id/second"
                android:layout_toRightOf="@id/img"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="3dp"/>
            <TextView
                android:id="@+id/fourth"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:text="아래 취미 칸을 채워보세요."
                android:layout_below="@id/third"
                android:layout_toRightOf="@id/img"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="3dp"/>
            <TextView
                android:id="@+id/ho1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:text="1"
                android:layout_toRightOf="@id/img"
                android:layout_below="@id/fourth"
                android:layout_marginTop="10dp"/>
            <EditText
                android:id="@+id/my_profile_hobby1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:hint="hobby1"
                android:textSize="18sp"
                android:layout_below="@id/fourth"
                android:layout_toRightOf="@id/ho1"
                android:layout_marginRight="10dp"
                android:layout_marginTop="3dp"/>
            <TextView
                android:id="@+id/ho2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:text="2"
                android:layout_toRightOf="@id/img"
                android:layout_below="@id/my_profile_hobby1"
                android:layout_marginTop="10dp"/>
            <EditText
                android:id="@+id/my_profile_hobby2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:hint="hobby2"
                android:textSize="18sp"
                android:layout_below="@id/my_profile_hobby1"
                android:layout_toRightOf="@id/ho2"
                android:layout_marginRight="10dp"
                android:layout_marginTop="3dp"/>
            <TextView
                android:id="@+id/ho3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:text="3"
                android:layout_toRightOf="@id/img"
                android:layout_below="@id/my_profile_hobby2"
                android:layout_marginTop="10dp"/>
            <EditText
                android:id="@+id/my_profile_hobby3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:hint="hobby3"
                android:textSize="18sp"
                android:layout_below="@id/my_profile_hobby2"
                android:layout_toRightOf="@id/ho3"
                android:layout_marginRight="10dp"
                android:layout_marginTop="3dp"/>
            <TextView
                android:id="@+id/ho4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:text="4"
                android:layout_toRightOf="@id/img"
                android:layout_below="@id/my_profile_hobby3"
                android:layout_marginTop="10dp"/>
            <EditText
                android:id="@+id/my_profile_hobby4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:hint="hobby4"
                android:textSize="18sp"
                android:layout_below="@id/my_profile_hobby3"
                android:layout_toRightOf="@id/ho4"
                android:layout_marginRight="10dp"
                android:layout_marginTop="3dp"/>
            <TextView
                android:id="@+id/ho5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:text="5"
                android:layout_toRightOf="@id/img"
                android:layout_below="@id/my_profile_hobby4"
                android:layout_marginTop="10dp"/>
            <EditText
                android:id="@+id/my_profile_hobby5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:hint="hobby5"
                android:textSize="18sp"
                android:layout_below="@id/my_profile_hobby4"
                android:layout_toRightOf="@id/ho5"
                android:layout_marginRight="10dp"
                android:layout_marginTop="3dp"/>
        </RelativeLayout>


        <Button
            android:id="@+id/btn_myprofile_modify"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:text="@string/ok"
            android:textSize="20sp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:background="#fceedd"/>
    </LinearLayout>



</ScrollView>