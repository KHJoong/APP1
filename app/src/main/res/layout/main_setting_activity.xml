<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ffffff"
    >

    <LinearLayout
        android:layout_width="280dp"
        android:layout_height="250dp"
        android:orientation="vertical"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="70dp">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="right">
            <Button
                android:id="@+id/member_pic_camera"
                android:layout_width="43dp"
                android:layout_height="40dp"
                android:background="@android:drawable/ic_menu_camera" />
            <Button
                android:id="@+id/member_pic_gallery"
                android:layout_width="43dp"
                android:layout_height="40dp"
                android:background="@android:drawable/ic_menu_gallery" />
            <Button
                android:id="@+id/member_pic_del"
                android:layout_width="43dp"
                android:layout_height="40dp"
                android:background="@android:drawable/ic_menu_close_clear_cancel" />
        </LinearLayout>
        <RelativeLayout
            android:layout_width="280dp"
            android:layout_height="210dp">
            <com.together.linkalk.FaceOverlayView
                android:id="@+id/member_pic"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
            <ImageView
                android:id="@+id/member_pic2"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </RelativeLayout>
    </LinearLayout>

    <Button
        android:id="@+id/member_withdraw_button"
        android:layout_width="356dp"
        android:layout_height="44dp"
        android:text="@string/member_withdraw"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp"/>

    <Button
        android:id="@+id/member_modify_button"
        android:layout_width="356dp"
        android:layout_height="44dp"
        android:layout_centerHorizontal="true"
        android:layout_above="@id/member_withdraw_button"
        android:text="@string/member_modify"/>

</RelativeLayout>